## Third-party Tools

# Set up jenv
export JENV_ROOT=/usr/local/opt/jenv
if which jenv > /dev/null; then eval "$(jenv init -)"; fi

# ls text colors
export CLICOLOR=1
# Set the text color for each file type.
# Format: XX (foreground color, background color)
# a     black
# b     red
# c     green
# d     brown
# e     blue
# f     magenta
# g     cyan
# h     light grey
# A     bold black, usually shows up as dark grey
# B     bold red
# C     bold green
# D     bold brown, usually shows up as yellow
# E     bold blue
# F     bold magenta
# G     bold cyan
# H     bold light grey; looks like bright white
# x     default foreground or background
directory=Fx
symbolicLink=Dx
socket=xx
pipe=xx
executable=Cx
blockSpecial=xx
charSpecial=xx
execWithSetUID=cx
execWithSetGID=cx
dirWithStickyBit=xx
dirWithoutStickyBit=xx
export LSCOLORS=$directory$symbolicLink$socket$pipe$executable$blockSpecial$charSpecial$execWithSetUID$execWithSetGID$dirWithStickyBit$dirWithoutStickyBit
